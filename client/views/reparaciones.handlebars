<body>
    <div class="container" id="advanced-search-form">
        <h2>Nueva Orden</h2>
        <form action="/reparaciones" method="POST">
            <div class="row">
            <div class="col">
            <div class="form-group">
                <label for="fecha">Fecha</label>
                <input type="text" class="form-control" name="fecha" placeholder="Fecha" id="fecha">
            </div>
            </div>
            <div class="col">
            <div class="form-group">
                <label for="nombre">Nombre y Apellido</label>
                <input type="text" class="form-control" name="nombre" placeholder="Nombre apellido" id="nombre">
            </div>
            </div>
            </div>
            <div class="row">
            <div class="col">
            <div class="form-group">
                <label for="marca">Marca</label>
                <input type="text" class="form-control" name="marca" placeholder="Marca" id="marca">
            </div>
            </div>
            <div class="col">
            <div class="form-group">
                <label for="modelo">Modelo</label>
                <input type="text" class="form-control" name="modelo" placeholder="Modelo" id="modelo">
            </div>
            </div>
            </div>
            <div class="row">
            <div class="col">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" placeholder="Email" id="email">
            </div>
            </div>
            <div class="col">
            <div class="form-group">
                <label for="telefono">Tel√©fono</label>
                <input type="number" class="form-control" name="tel" placeholder="Telefono" id="telefono">
            </div>
            </div>
            </div>
            <div class="row">
            <div class="col">
            <div class="form-group">
                <label for="problema">Problema</label>
                <input type="text" class="form-control" name="problema" placeholder="Problema" id="problema">
            </div>
            </div>
            <div class="col">
            <div class="form-group">
                <label for="costo">Costo</label>
                <input type="number" class="form-control" name="costo" placeholder="Costo" id="costo">
            </div>
            </div>
            </div><br>
            <div class="row">
            <div class="col">
            <div class="form-group">
                <label for="estado">Estado:</label>
                    <select id="estado" name="estado">
                    <option value="Recibido">Presupuesto</option>
                    <option value="Presupuesto">En Curso</option>
                    <option value="Entregado">Entregado</option>
                </select>
            </div>
            </div>
            <div class="col">
            <button class="btn btn-info btn-lg btn-responsive" id="registrar"> <span class="glyphicon glyphicon-search"></span> Registrar</button>
            </div>
            </div>
        </form>
    </div>
    <hr>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Dispositivo</th>
                    <th>Problema</th>
                    <th>Costo</th>
                    <th>Estado</th>
                    <th>Operacion</th>
                </tr>
            </thead>
            <tbody>
                {{#each datos}}
                <tr>
                    <td>**</td>
                    <td>{{this.fecha}}</td>
                    <td>{{this.nombre}}</td>
                    <td>{{this.modelo}}</td>
                    <td>{{this.problema}}</td>
                    <td>{{this.costo}}</td>
                    <td>{{this.estado}}</td>
                    <td><button>Ver/Editar</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
</body>

