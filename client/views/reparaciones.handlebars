<body>
    <div class="container" id="advanced-search-form">
        <h2>Nueva Orden</h2>
        <form action="/agregar-reparaciones" method="POST">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="fecha">Fecha</label>
                        <input type="text" class="form-control" name="fecha" placeholder="Fecha" id="fecha">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="nombre">Nombre y Apellido</label>
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre apellido" id="nombre">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="marca">Marca</label>
                        <input type="text" class="form-control" name="marca" placeholder="Marca" id="marca">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="modelo">Modelo</label>
                        <input type="text" class="form-control" name="modelo" placeholder="Modelo" id="modelo">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Email" id="email">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="telefono">Tel√©fono</label>
                        <input type="number" class="form-control" name="tel" placeholder="Telefono" id="telefono">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="problema">Problema</label>
                        <input type="text" class="form-control" name="problema" placeholder="Problema" id="problema">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="costo">Costo</label>
                        <input type="number" class="form-control" name="costo" placeholder="Costo" id="costo">
                    </div>
                </div>
            </div><br>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="estado">Estado:</label>
                        <select id="estado" name="estado">
                            <option value="Presupuesto">Presupuesto</option>
                            <option value="En Curso">En Curso</option>
                            <option value="Entregado">Entregado</option>
                        </select>
                    </div>
                </div>
                <div class="col">
                    <button class="btn btn-info btn-lg btn-responsive" id="registrar"> <span
                            class="glyphicon glyphicon-search"></span> Registrar</button>
                </div>
            </div>
        </form>
    </div>
    <hr>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Nombre</th>
                <th>Dispositivo</th>
                <th>Problema</th>
                <th>Costo</th>
                <th>Estado</th>
                <th>Operacion</th>
            </tr>
        </thead>
        <tbody>
            {{#each datos}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.fecha}}</td>
                <td>{{this.nombre}}</td>
                <td>{{this.modelo}}</td>
                <td>{{this.problema}}</td>
                <td>{{this.costo}}</td>
                <td>{{this.estado}}</td>
                <td><button id={{this._id}} type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Editar</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <form action="/modificarDatos" method="POST">
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input id="selectedTurno" placeholder="Costo">
                    <input id="selectedEstado" placeholder="Estado">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="save-turno">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    </form>
    <script>
        let decodedJson = decodeURIComponent("{{{encodedJson}}}");
        console.log(decodedJson);
        let jsonObj = JSON.parse(decodedJson);
        console.log("ARRAY", jsonObj);
        const inputSelectedTurno = document.getElementById('selectedTurno');
        const inputEstado = document.getElementById('selectedEstado');
        const btnSaveChanges = document.getElementById('save-turno');

        
        jsonObj.forEach(function(turno){
            const boton = document.getElementById(turno._id);
            boton.addEventListener("click", function() {
                inputSelectedTurno.value = turno.costo;
                inputEstado.value = turno.estado;
                console.log("linea137", boton);
            })
        });

            btnSaveChanges.addEventListener("click", function(){
                console.log(jsonObj);
            })
        
    </script>
</body>